<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ptoductoCardView"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    app:cardCornerRadius="@dimen/cornerradius_cardview"
    android:fitsSystemWindows="true"

    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="10dp"
        >

        <TextView
            android:id="@+id/txtCodigoMostrarP"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:visibility="invisible"
            />


        <ImageView
            android:id="@+id/pictureCardProduct"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@color/White"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="14sp"
            />
        <!--android:background="@drawable/cardview"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:background="@color/background_textcard"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/userNamecardP"
                    android:text="Moonshop"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/textSize_userName_card"
                    android:layout_width="180dp"
                    android:layout_marginLeft="90dp"
                    android:layout_height="wrap_content"/>



            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/descriptionProdct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piezas Ãºicas e intencionadas con un poco de...."
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_pizza_card"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/precio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S/. "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_pizza_card"
                    />

                <TextView
                    android:id="@+id/precioDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_pizza_card"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/cantidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad: "
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_pizza_card"
                    />

                <TextView
                    android:id="@+id/cantidadDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textSize_pizza_card"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal"

                >

                <Button
                    android:id="@+id/btnEditProduct"
                    android:theme="@style/RaisedButtonDark"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:text="Edit"
                    android:textSize="10dp"
                    />

                <Button
                    android:id="@+id/btnDeleteProduct"
                    android:theme="@style/RaisedButtonDark"
                    android:layout_width="90dp"
                    android:layout_height="31dp"
                    android:layout_marginLeft="20dp"
                    android:text="Delete"
                    android:textSize="10dp"

                    />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</androidx.cardview.widget.CardView>